<div id="login">
  <% if @current_user %>
    <p class="welcome">Welcome, #{@current_user.name}</p>
    <%= link_to 'Log out', logout_path, :method => :post %>
  <% else %>
    <p class="login">
      <%= link_to 'Log in with your Twitter account', '/auth/twitter/callback' %>
    </p>
  <% end %>
</div>
